<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Water-Delivery</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/customCSS/common.css"> 
    <link rel="stylesheet" href="/customCSS/UpdateUser.css"> 
    <link rel="stylesheet" href="/customCSS/sidebar.css"> 
    <link rel="stylesheet" href="/customCSS/jquery.mCustomScrollbar.min.css">

</head>

<body>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="mt-3" id="dismiss">
                <img src="/background/back.svg" height="15" width="15">
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/user?category=drinking">Home</a>
                </li>
                <li>
                    <a href="/user/myAccount">My Account</a>
                </li>
                <li>
                    <a href="#">My Orders</a>
                </li>
                <li>
                    <a href="/user/cart">My Cart</a>
                </li>
                <li>
                    <a href="#">About Us</a>
                </li>
                <li>
                    <a href="#">Rate Us</a>
                </li>
                <li>
                    <a href="/user/logout">Log Out</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn ml-2">
                        <img src="/background/menu.svg" height="20" width="20">
                    </button>

                    <span class="nav-item h5">Update Account</span>
                    
                    <form class="form-inline my-2 my-lg-0 mr-2">
                        <img class="form-inline" src="/background/bell.svg" height="25" width="25"><span class="notification text-center"><%= cartTotal[0].cartTotal %></span>
                        <a href="/user/cart"><img class="form-inline mr-1" src="/background/cart.svg" height="25" width="25"></a><span class="notification text-center"><%= cartTotal[0].cartTotal %></span>
                      </form>                    
                </div>
            </nav>

            <div class="container-fluid mt-5 p-0 mb-0">
                <div class="row p-3">
                
                    <div class="col col-md-6 mx-auto p-2 rounded shadow"> 
                        <div class="row mt-1">
                            <div class="col col-3 p-0">
                                <p class="font-weight-bold text-right small">Name</p>
                            </div>
                            <div class="col col-9">
                              <form action="saveChangesUser" method="POST">
                                <input type="text" name="username" value='<%=user[0].username%>' class="form-control form-control-sm"/>
                                <span class="error"> <%= error.nameError%> </span>
                            </div>
                        </div>

                        <div class="row mt-1">
                            <div class="col col-3 p-0">
                               <p class="font-weight-bold text-right small">Mobile</p>
                            </div>
                            <div class="col col-9">
                               <input type="text" name="mobileno" readonly="true" value='<%=user[0].mobileno%>' class="form-control form-control-sm"/>
                            </div>
                        </div>

                        <div class="row mt-1">
                            <div class="col col-3 p-0">
                                <p class="font-weight-bold text-right small">Email</p>
                            </div>
                            <div class="col col-9">
                                <input type="text" name="email" value='<%=user[0].email%>' class="form-control form-control-sm"/>
                                <span class="error"> <%= error.emailError%> </span>
                            </div>
                        </div>

                        <div class="row mt-1">
                            <div class="col col-3 p-0">
                                <p class="font-weight-bold text-right small">Password</p>
                            </div>
                            <div class="col col-9">
                                <input type="text" name="password" value='<%=user[0].password%>' class="form-control form-control-sm"/>
                                <span class="error"> <%= error.passwordError%> </span>
                            </div>
                        </div>
                          
                        <div class="row mt-1">
                            <div class="col col-3 p-0">
                               <p class="font-weight-bold text-right small">Address</p>
                            </div>
                            <div class="col col-9">
                                <textarea class="form-control form-control-sm" name="address"><%=user[0].address%></textarea>
                                <span class="error"> <%= error.addressError%> </span>
                            </div>
                        </div>

                        <div class="row mt-1">
                            <div class="col col-5 mx-auto mt-2 p-0">
                               <input type="submit" value="Save Changes" class="btn btn-block bg-dark text-white btn-sm">
                             </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="overlay"></div>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.mCustomScrollbar.concat.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#sidebar").mCustomScrollbar({
                theme: "minimal"
            });

            $('#dismiss, .overlay').on('click', function () {
                $('#sidebar').removeClass('active');
                $('.overlay').removeClass('active');
            });

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').addClass('active');
                $('.overlay').addClass('active');
                $('.collapse.in').toggleClass('in');
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });
        });
    </script>
</body>

</html>