<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Water-Delivery</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/customCSS/UserHome.css">
    <link rel="stylesheet" href="/customCSS/common.css"> 
    <link rel="stylesheet" href="/customCSS/sidebar.css"> 
    <link rel="stylesheet" href="/customCSS/jquery.mCustomScrollbar.min.css">

</head>

<body>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="mt-3" id="dismiss">
                <img src="/background/back.svg" height="15" width="15">
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="/user/myAccount">My Account</a>
                </li>
                <li>
                    <a href="#">My Orders</a>
                </li>
                <li>
                    <a href="/user/cart">My Cart</a>
                </li>
                <li>
                    <a href="#">About Us</a>
                </li>
                <li>
                    <a href="#">Rate Us</a>
                </li>
                <li>
                    <a href="/user/logout">Log Out</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn ml-2">
                        <img src="/background/menu.svg" height="20" width="20">
                    </button>

                    <span class="nav-item h5">Home</span>
                    
                    <form class="form-inline my-2 my-lg-0 mr-2">
                        <img class="form-inline" src="/background/bell.svg" height="25" width="25"><span class="notification text-center"><%= cartTotal[0].cartTotal %></span>
                        <a href="/user/cart"><img class="form-inline mr-1" src="/background/cart.svg" height="25" width="25"></a><span class="notification text-center"><%= cartTotal[0].cartTotal %></span class="notification">
                      </form>                    
                </div>
            </nav>

            <div class="container-fluid mt-5 p-0 mb-5">
                <div class="row">
                    <div class="col p-0"> 
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img class="d-block w-100" src="/background/1.jpg" alt="First slide">
                              </div>
                              <div class="carousel-item">
                                <img class="d-block w-100" src="/background/2.jpg" alt="Second slide">
                              </div>
                              <div class="carousel-item">
                                <img class="d-block w-100" src="/background/3.jpg" alt="Third slide">
                              </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </div>
                    </div>
                </div>

                <div class="row p-0 mt-2">
                    <div class="col text-right p-0">
                        <div class="dropdown mr-3">
                            <button class="btn btn-light" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img class="form-inline" src="/background/filter.svg" height="25" width="25">
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                <a href="#" class="dropdown-item disabled font-weight-bold">Brand</a>
                                <a href="#" class="dropdown-item small">Bislery</a>
                                <a href="#" class="dropdown-item small">Kinley</a>
                                <a href="#" class="dropdown-item small">Local</a>
                                <div class="dropdown-divider"></div>
                                <a href="#" class="dropdown-item disabled font-weight-bold">Price</a>
                                <a href="#" class="dropdown-item small">Low to High</a>
                                <a href="#" class="dropdown-item small">High to Low</a>
                            </div>
                          </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="row">
                        
                        <% for(i = 0; i < result.length; i++){ %>

                            <div class="col col-6 col-md-3 p-1">
                                <div class="card mt-2 rounded shadow p-1">
                                    <div class="card-body pt-2 pb-2 pl-2 pr-2 text-center">
                                        <img src="/products/<%= result[i].picture %>" class="card-img-top" alt="product" style="max-width: 350px; max-height: 350px;">
                                    </div>
                                    <div class="card-body p-1">
                                    <h5 class="card-title h6" style="min-height: 55px;"><%= result[i].name %></h5>
                                    <h6 class="card-subtitle mb-2 small">Extra Details Optional</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">Rs. <%= result[i].price %></h6>
                                    </div>
                                    <div class="card-body pt-0 pb-2">
                                        <div class="row p-0">
                                            <div class="col col-5 p-0">
                                                <form action="user/buyNow" method="POST">
                                                    <input type="hidden" name="pId" value="<%= result[i].pId %>">
                                                    <input type="hidden" name="category" value="<%= drinking %>">
                                                    <input type="submit" class="product-button btn btn-dark btn-sm btn-block p-0 pt-1 pb-1" value="Buy now">
                                                </form>
                                            </div>
                                            <div class="col col-7 p-0">
                                                <form action="user/addToCart" method="POST">
                                                    <input type="hidden" name="pId" value="<%= result[i].pId %>">
                                                    <input type="hidden" name="category" value="<%= drinking %>">
                                                    <input type="submit" class="product-button btn btn-outline-dark bg-light btn-sm btn-block p-0 pt-1 pb-1" value="Add to cart">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                        <% } %>
                           
                        </div>
                    </div>
                </div>
            </div>
 
            <div class="row p-0 fixed-bottom">
                <div class="col p-0">
                    <% if(drinking){ %>
                        <a href="?category=drinking" class="bottom-button btn btn-dark btn-sm btn-block">DRINKING</a>
                    <%}else{%>
                        <a href="?category=drinking" class="bottom-button btn btn-outline-dark bg-light btn-sm btn-block">DRINKING</a>
                    <%}%>    
                </div>
                <div class="col p-0">
                    <% if(domestic){ %>
                        <a href="?category=domestic" class="bottom-button btn btn-dark btn-sm btn-block">TANKERS</a>
                    <%}else{%>
                        <a href="?category=domestic" class="bottom-button btn btn-outline-dark bg-light btn-sm btn-block">TANKERS</a>
                    <%}%>
                </div>
            </div>
        </div>
    </div>

    <div class="overlay"></div>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.mCustomScrollbar.concat.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#sidebar").mCustomScrollbar({
                theme: "minimal"
            });

            $('#dismiss, .overlay').on('click', function () {
                $('#sidebar').removeClass('active');
                $('.overlay').removeClass('active');
            });

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').addClass('active');
                $('.overlay').addClass('active');
                $('.collapse.in').toggleClass('in');
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });
        });
    </script>
</body>

</html>